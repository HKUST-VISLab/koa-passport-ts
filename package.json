{
  "name": "koa-passport-ts",
  "version": "0.0.4",
  "description": "the passport middleware for koa written in TypeScript.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "node tools/build clean",
    "build": "npm run clean && tsc -p .",
    "test": "npm run build && nyc ava",
    "bump": "standard-version",
    "release": "git push --follow-tags origin master"
  },
  "engines": {
    "node": ">=6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HKUST-VISLab/koa-passport-ts.git"
  },
  "keywords": [
    "koa",
    "passport",
    "typescript"
  ],
  "author": "chenzhutian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HKUST-VISLab/koa-passport-ts/issues"
  },
  "homepage": "https://github.com/HKUST-VISLab/koa-passport-ts#readme",
  "dependencies": {
    "@types/koa": "^2.0.40",
    "koa-session-ts": "^0.1.2",
    "uid-ts": "0.0.2"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.3",
    "nock": "^9.1.0",
    "ava": "^0.23.0",
    "koa": "^2.4.1",
    "nyc": "^11.3.0",
    "shelljs": "^0.7.8",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "peerDependencies": {
    "koa": "^2.3.0"
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js"
    ],
    "extensions": [
      ".ts"
    ],
    "sourceMap": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "all": true,
    "check-coverage": false
  }
}
